<% if user_signed_in? %>
	<%= link_to new_post_path, class: 'btn btn-lg btn-primary' do %>
		New post <span class="glyphicon glyphicon-pencil"></span>
	<% end %>

	<% else %>
	<button class='btn btn-lg btn-primary' id='new-post-modal' data-toggle='modal' data-target='#logInModal'>New post <span class="glyphicon glyphicon-pencil"></span></button>
<% end %>

<% if @posts.count == 0 %>
	<p class='no-posts'> There are no posts yet... add one! </p>
<% end %>

<!-- If there are any posts -->
<% if @posts.in_groups_of(3, false) do |post_triplet| %>
	<section class='row' >
		<!-- for each one of those posts -->
		<%= render post_triplet %>
	</section>
	<% end %>
<% end %>
